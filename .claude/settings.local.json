{
  "permissions": {
    "allow": [
      "Bash(npm create:*)",
      "Bash(npm install:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "WebSearch",
      "mcp__primevue__get_component",
      "mcp__primevue__get_component_props",
      "mcp__primevue__get_component_import",
      "mcp__primevue__get_usage_example",
      "mcp__primevue__get_example",
      "Bash(head:*)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__query-docs",
      "Bash(git switch:*)",
      "Bash(tail:*)",
      "Bash(test:*)",
      "Bash(cd /e/Documents/workspaces/rezipees/recipes && npm run build 2>&1)",
      "Bash(cd E:/Documents/workspaces/rezipees/recipes && npm run build 2>&1)",
      "Skill(commit-message-v2)",
      "Skill(spec-v2)",
      "mcp__firebase__firebase_read_resources",
      "Bash(npm test:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "fp=$(jq -r '.tool_input.file_path'); [[ \"$fp\" =~ \\.vue$ ]] && npx prettier --write \"$fp\""
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "firebase@firebase": true
  },
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest",
        "--caps=vision"
      ]
    }
  },
  "outputStyle": "default"
}
